@using Crowdfund_TeamProject.Core.Model
@model Crowdfund_TeamProject.Core.Model.Options.AddProjectOptions
@*@model Crowdfund_TeamProject.Web.Models.CreateProjectViewModel*@

<form method="post" class="js-create-project-form" style="display:contents" action=@Url.Action("create", "project")>

    <div class="form-row flex-row">

        <div class="col-md-4 mb-3">
            <label for="Title">Title</label>
            <input type="text" class="form-control js-project-title">
        </div>

        <div class="col-md-4 mb-3">
            <label for="Goal">Goal</label>
            <input type="text" class="form-control js-project-goal">
        </div>

        <div class="form-group col-md-4">
            <label for="Expiration_date">Expiration Date</label>
            <input type="text" class="form-control js-datepicker" />
        </div>

    </div>

    <div class="form-group flex-column">

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control js-project-description" rows="3"></textarea>
        </div>

        <div class="input-group mb-3">

            <div class="input-group-prepend input-group-text">
                Upload Picture
            </div>

            <div class="custom-file">
                <input type="file" class="custom-file-input js-project-image" accept="image/*">
                <label class="custom-file-label js-picture-label">Choose picture</label>
            </div>

        </div>

        <div class="input-group mb-3">

            <div class="input-group-prepend input-group-text">
                Upload Video
            </div>

            <div class="custom-file">
                <input type="file" class="custom-file-input js-project-video" accept="video/*">
                <label class="custom-file-label js-video-label">Choose video</label>
            </div>

        </div>

        @Html.DropDownList(
        "category", 
        Html.GetEnumSelectList(typeof(Crowdfund_TeamProject.Core.Model.ProjectCategory)), 
        new { @class = "form-control js-project-category" })
            
    </div>

    <button class="btn btn-primary js-create-project" type="button">Submit</button>

</form>


