@model Crowdfund_TeamProject.Core.Model.Options.AddCreatorOptions


    <form class="js-create-creator" method="post"
          action="@Url.Action("createCreator", "creator")">
        <img class="mb-4" src="~/images/creatorimage.jpeg" alt="" width="190" height="150">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <div class="form-group">
            <label for="@Html.IdFor(c => c.Name)">Creator Username</label>
            @Html.TextBoxFor(c => c.Name,
                new { @class = "form-control js-name", placeholder = "enter your username" })
            <small id="namelHelp" class="form-text text-muted">
                Your userName must be unique
            </small>
        </div>

        <div class="form-group">
            <label for="@Html.IdFor(c => c.Email)">Email</label>
            @Html.TextBoxFor(c => c.Email,
              new { @class = "form-control js-email", placeholder = "enter your email address" })
            <div class="js-validation-email validation-error" style="display: none">
                Invalid Email
            </div>
        </div>

        <button type="button" class="btn btn-primary js-submit-creator" disabled>Submit</button>
    </form>
    <div class="alert  js-create-creator-alert" role="alert"
         style="display: none">
    </div>