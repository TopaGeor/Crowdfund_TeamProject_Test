@{
    ViewData["Title"] = "Home Page";
}

@model List<Crowdfund_TeamProject.Core.Model.Project>

    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/artcar.jpg" class="d-block min-vw-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h3>Art</h3>
                    <p>This is your Chance to bring to live !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/bookcar.jpg" class="d-block min-vw-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Book</h5>
                    <p>Give the chance to your book travel the world</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/sportcar.webp" class="d-block min-vw-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Sport</h5>
                    <p>Show the world the Sport you love !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/gcar.jpg" class="d-block min-vw-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Game</h5>
                    <p>Show us how big Gamer you ar !</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><br />

    <div>
        <blockquote class="blockquote text-center">
            <p class="font-weight-bold mb-0">Top Trending Projects</p>
        </blockquote>
    </div>

    <div class="container d-flex justify-content-around marketing">

     @{
       if (Model.Count > 0) {
          <div class="row col-md-12">
            @{ 
               foreach(var p in Model) {

                <div class="col-lg-4">
                <img class="img-circle" src="~/images/pletter1.jpg" alt="Generic placeholder image" width="140" height="140">
                  <h2>@p.Title</h2>
                  <p>Description : @p.Description<br />
                  Progress: @p.Achieved / @p.Goal</p>
                  <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
                </div>

                }

               }
          </div>
        }

     }


    </div>
